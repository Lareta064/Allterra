
section.blog-page
	.container
		.aside-grid.aside-grid--1023.gap-20
			//=====left column ====
			.aside-grid__col.filters.dynamic-menu
				include _aside-filters
			//==== right column ====
			.aside-grid__content
				.three-columns
					//===============группа из 6 карточек ===============
					+blog-card(1, 'Статья', 'Как написать мотивационное письмо в&nbsp;университет?')
					+blog-card(2, 'Статья', 'Экономическое образование в США')
					+blog-card(9, 'Новость', 'Техническое образование в Германии')
