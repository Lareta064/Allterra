
section.news-page
	.container
		.aside-grid.aside-grid--1023.gap-20
			//=====left column ====
			.aside-grid__col.filters.dynamic-menu
				//====== filters header ===
				.filters-header.dynamic-menu__header
					.h4 Выберете отзывы, интересующие вас
					svg.svg-chevron-down
						use(href="./img/spriteSvg.svg#svg-chevron-down")
					
				//====== filters content ===
				.filters-drop.dynamic-menu__list
					.filters-body
						//========ВЫБРАННЫЕ ФИЛЬТРЫ =======
						.filters__selected
							button(type="button").filters-reset.grey-link Сбросить все
							.filters-group
								.filters-group__title Уровень образования
								.filters-group__label
									p Языковые курсы
									button(type="button").btn-remove
							
							.filters-group
								.filters-group__title Страна
								.filters-group__label
									p Испания
									button(type="button").btn-remove

						//=========СПИСОК ГРУПП ФИЛЬТРОВ =======
						
						//=====ОДНА ГРУППА ======
						.filters-group
							.filters-group__title Страна
							.filters-group__list
								a(href="#!") Австралия
								a(href="#!") Великобритания
								a(href="#!") Германия
								a(href="#!") Ирландия
								a(href="#!") Испания
								a(href="#!") Италия
											
			//==== right column ====
			.aside-grid__content.flex-col
				.news-cards.three-columns
					+blog-card(1, 'Статья', 'Как написать мотивационное письмо в&nbsp;университет?')
					+blog-card(2, 'Статья', 'Экономическое образование в США')
					+blog-card(9, 'Новость', 'Техническое образование в Германии')
					+blog-card(10, 'Новость', 'Обучение на промышленного дизайнера за границей')
					+blog-card(11, 'Новость', 'В какой стране лучшее образование?')
					+blog-card(12, 'Новость', 'IELTS или TOEFL: что лучше для поступления в университет')
				
				//===============BANNER ==============
				a(href="#!")
					picture.img-banner__picture
						source(srcset="./img/main-page/faq-img-tablet.webp", media="(max-width: 767px)" width="767" height="164"  type="image/webp")
