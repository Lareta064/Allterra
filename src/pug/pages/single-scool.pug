extends ../layouts/layout.pug

block content
	include ../sections/_header
	//=============MAIN===========
	mixin slideFlag(cntr, txt)
		.swiper-slide.ab__item.tab-btn
			.country-item
				svg(class="fl-"+ cntr width="40" height="27")
					use( href='./img/flags-sprite.svg#fl-'+ cntr)
				p #{txt}
	main.inner-page.inner-page--scool
		section.hero(style="background-image:url('./img/scools/header-bg.webp')")
			.container
				.hero-content
					ul.breadcrumb
						li
							a(href="#!") Главная
						li
							a(href="#!") Статьи об образовании за рубежом
					//======= title + form =====
					.hero-title.hero-title--rel
						h1.title Поступление в среднюю школу за рубежом
						p.hero-subtitle Индивидуально подбираем зарубежную школу под задачи семьи и потребности ребёнка, помогаем подготовиться к поступлению и сопровождаем во время обучения за границей
						a(href="#!").btn-accent Получить консультацию
					//===== bottom text =====
					.hero-bottom
						+stripes-list('Сильнейшие технические вузы мира', 'Медицинские факультеты', 'Университеты искусств')
		
		include ../sections/_scool-content
		
		section.specialization.light-bg
			.container
				.header-group.text-center
					h2.section-title Что делает Allterra Education
				
				//============= SERVICE CARDS =============
				.service-cards.four-columns
					+serv-card('about/card1', 'Среднее образование',' Построение образовательного маршрута, выбор школы, подготовка, поступление и курирование в процессе учебы')
					+serv-card('about/card2', 'высшее образование',' Выбор специальности и вуза, подготовка документов, поступление и получение студенческой визы')

					+serv-card('about/card3', 'Языковые лагеря и курсы',' Детские лагеря за рубежом и языковые курсы для взрослых, подготовка к поступлению в...')

					+serv-card('about/card4', 'Постдипломное образование и MBA',' Выбор вуза, подготовка и поступление на MBA, в ординатуру, магистратуру...')
		
		//======= SLIDER COUNTRY + SCOOL =======
		section.scool-tabs.custom-tabs.light-bg
			.container
				h2.section-title  География обучения c #[span.accent-border Allterra Education]
				
				//======= slider-content=======
				.scool-tabs-wrapper.white-bg
					.country-swiper-block
						.swiper.country-swiper.ab
							.swiper-wrapper
								+slideFlag('uk', 'Великобритания')
								+slideFlag('swet', 'Швейцария')
								+slideFlag('de', 'Германия')
								+slideFlag('irl', 'Ирландия')
								+slideFlag('ital', 'Италия')
								+slideFlag('spain', 'Испания')
								+slideFlag('can', 'Канада')
								+slideFlag('netherl', 'Нидерланды')
								+slideFlag('usa', 'США')
								+slideFlag('fr', 'Франция')
							.ab__line
								span#ab__range
						//=======SLIDER NAV ARROWS =========
						.slider-nav.slider-nav--grey
							.swiper-button-next
							.swiper-button-prev
					
					//======SINCLE ARTICLE ============
					.scool-tabs__articles
						article.scool-description.custom-tab.active
							h2.h3 Великобритания
							//======= text======
							p Старейшая система образования, дающая глубокие знания по выбранным дисциплинам. Прямой путь в британский университет. Частные школы-пансионы с многовековой историей и современные международные колледжи. Британская программа A-levels или международная - IB. Профессиональные занятия спортом или любым из направлений искусств.  Проживание на кампусах школ или в приемных семьях, школы совместного или раздельного обучения для мальчиков и девочек.
							//======= button======
							a(href="#!").btn Узнать больше
							//======= image======
							img(src="./img/scools/1.webp", width="1160" height="440" alt="img")
						
						
						//======SINCLE ARTICLE ============
						article.scool-description.custom-tab
							h2.h3 Швейцария
							//======= text======
							p Здесь учатся дети самых взыскательных родителей. Главная цель среднего образования в Швейцарии — индивидуальность, всестороннее развитие личности и здоровье. Выпускники швейцарских школ свободно говорят на нескольких языках, имеют друзей по всему миру и поступают в лучшие университеты.
							//======= button======
							a(href="#!").btn Узнать больше
							//======= image======
							img.lazy(src="./img/scools/1.webp", width="1160" height="440" alt="img")
						
						//======SINCLE ARTICLE ============
						article.scool-description.custom-tab

							h2.h3 Германия
							//======= text======
							p Сложная и насыщенная программа немецкой средней школы Abitur - прямой и естественный путь в немецкий университет. Глубокие знания по основным школьным дисциплинам, большое количество предметов. Отличные возможности для занятий наукой, искусством или спортом, здоровое питание. Проживание на кампусе школ. Удобная логистика для жителей России и стран постсоветского пространства.
							//======= button======
							a(href="#!").btn Узнать больше
							//======= image======
							img(src="./img/scools/1.webp", width="1160" height="440" alt="img")
		section
			.container
				.three-columns
					
					
		include ../sections/_statistics
		include ../sections/_accredit
	include ../sections/_footer

block variables
	-var title = "Выбор школы";