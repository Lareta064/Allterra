extends ../layouts/layout-ui.pug

block content
	.container-dashboard
		h3 Filters menu
		.filters
			//====== filters header ===
			.filters-header
				.h4 Выберете отзывы, интересующие вас
				svg.svg-chevron-down
					use(href="./img/spriteSvg.svg#svg-chevron-down")
				
			//====== filters content ===
			.filters-drop
				.filters-body
					//========ВЫБРАННЫЕ ФИЛЬТРЫ =======
					.filters__selected
						button(type="button").filters-reset.grey-link Сбросить все
						.filters-group
							.filters-group__title Уровень образования
							.filters-group__label
								p Языковые курсы
								button(type="button").btn-remove
						
						.filters-group
							.filters-group__title Страна
							.filters-group__label
								p Испания
								button(type="button").btn-remove

					//=========СПИСОК ГРУПП ФИЛЬТРОВ =======
					.filters__list
						.filters-group
							.filters-group__title Страна
							.filters-group__list
								a(href="#!") Австралия
								a(href="#!") Великобритания
								a(href="#!") Германия
								a(href="#!") Ирландия
								a(href="#!") Испания
								a(href="#!") Италия
							
							button(type="button").accent-link.btn-more Показать еще