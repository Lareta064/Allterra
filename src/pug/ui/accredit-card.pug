extends ../layouts/layout-ui.pug

block content
	.container-dashboard
		h2 Карточка аккредитации
		.flex-row(style="gap:40px;")
			+accredit-card-ui('logo1.webp', 'Allterra Education ', 'входит в список агентств, рекомендованных Британским Советом для профессиональной консультации по учебе в Великобритании')
		pre.
			+accredit-card('logo1.webp', 'Allterra Education ', 'входит в список агентств, рекомендованных Британским Советом для профессиональной консультации по учебе в Великобритании')
		hr

		h2 Блок Карточки аккредитации
		.accreditation-cards
			.flex-row
				+accredit-card-ui('logo1.webp', 'Allterra Education ', 'входит в список агентств, рекомендованных Британским Советом для профессиональной консультации по учебе в Великобритании')
				+accredit-card-ui('logo2.webp', 'Allterra Education ', ' является официальным представителем более 300 ведущих  частных школ Великобритании в рамках ассоциации British Boarding  Schools Network')
			.flex-row
				+accredit-card-ui('logo3.webp', 'Allterra Education ', ' – член организации ICEF; наши специалисты прошли  профессиональную подготовку и получили международный статус ICEF Trained  Advisors')
				+accredit-card-ui('logo4.webp', 'Allterra Education ', 'успешно сотрудничает с международной ассоциацией Quality Education, в которую входят лучшие языковые школы и колледжи  планеты')

		h2 Карточки в футере
		.accreditation-short.flex-center-y
			.accredit-logo
				img.lazy(src="../img/accredit/logo1.webp", alt="img")
			.accredit-logo
				img.lazy(src="../img/accredit/logo2.webp", alt="img")
			.accredit-logo
				img.lazy(src="../img/accredit/logo3.webp", alt="img")
			.accredit-logo
				img.lazy(src="../img/accredit/logo4.webp", alt="img")