mixin accredit-card(img, strText, txt)
	.accredit-card
		.accredit-logo
			img(src="./img/accredit/"+ img height="80", alt="logo")
		.accredit__text
			p #[strong #{strText}]  #{txt}

mixin accredit-card-ui(img, strText, txt)
	.accredit-card
		.accredit-logo
			img(src="../img/accredit/"+ img height="80", alt="logo")
		.accredit__text
			p #[strong #{strText}]  #{txt}
