mixin hero-section(bgImg, links, name, backLink)
	section.hero(style="background-image: url('../img/"+ bgImg +"')")
		.container
			.hero-content
				ul.breadcrumb
					each item in links
						li
							a(href="#!") #{item}
				.hero-title
					h1.title !{name}
				
				if backLink
					.hero-link
						a(href="#!").back-link
							svg.svg-chevron
								use(href="../img/spriteSvg.svg#svg-chevron")
