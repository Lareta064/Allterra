mixin blogCardsSlider(title, titleSpan, whiteBtnClass = 'btn-white')
	//======== BLOG CARDS ========
	section.blog&attributes(attributes)
		.container
			//======= SECTION TOP ROW=======
			.flex-header
				h2.h2 #{title} <br> #[span.accent-border #{titleSpan}]
				
				.btns-group
					a(href="#!" class="btn--slim " + whiteBtnClass) Все новости
					a(href="#!").btn--slim.btn Все статьи

			//======= SECTION SLIDER =======
			.slider-wrapper
				//======== slider-content =======
				.blog-cards-slider.swiper
					.swiper-wrapper
						//===== single slide ========
						.swiper-slide
							+blog-card(1, 'Статья', 'Как написать мотивационное письмо в&nbsp;университет?')
						
						//===== single slide ========
						.swiper-slide
							+blog-card(2, 'Новость', 'Экономическое образование в США')
						//===== single slide ========
						.swiper-slide
							+blog-card(3, 'Статья', 'Техническое образование в Германии')
						
						//===== single slide ========
						.swiper-slide
							+blog-card(4, 'Новость', 'IELTS или TOEFL: что лучше для поступления в университет')
						//===== single slide ========
						.swiper-slide
							+blog-card(1, 'Статья', 'Как написать мотивационное письмо в&nbsp;университет?')
						
						//===== single slide ========
						.swiper-slide
							+blog-card(2, 'Новость', 'Экономическое образование в США')
						//===== single slide ========
						.swiper-slide
							+blog-card(3, 'Статья', 'Техническое образование в Германии')
						
						//===== single slide ========
						.swiper-slide
							+blog-card(4, 'Новость', 'IELTS или TOEFL: что лучше для поступления в университет')

			
				//===== swiper navigation========
				.slider-nav
					.swiper-button-next
					.swiper-button-prev
				
				//========VISIBLE MOBILE =======
				.btns-group
					a(href="#!" class="btn--slim " + whiteBtnClass)  Все новости
					a(href="#!").btn--slim.btn Все статьи

